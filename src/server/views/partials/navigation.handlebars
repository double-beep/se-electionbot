<header>
  <nav class="main-nav">
    <label for="nav">Menu:</label>
    <select id="nav">
      <option selected="selected"></option>
      {{#each routes}}
      {{#unlessEquals @key ../path}}
        {{#if (either this.public ../password)}}
        <option value="{{@key}}{{#if ../password}}?password={{../password}}{{/if}}">
          {{initIfFalsy (unprefix "/" @key) "home"}}
        </option>
        {{/if}}
      {{/unlessEquals}}
      {{/each}}
    </select>
  </nav>
</header>