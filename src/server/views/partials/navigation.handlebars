<header>
  <nav class="main-nav">
    <select class="form-select" id="nav">
        <option selected="selected">Menu</option>
        <optgroup label="Menu">
        {{#each routes}}
        {{#unlessEquals @key ../path}}
            {{#if (either this.public ../password)}}
            <option value="{{@key}}{{#if ../password}}?password={{../password}}{{/if}}">
            {{initIfFalsy (unprefix "/" @key) "home"}}
            </option>
            {{/if}}
        {{/unlessEquals}}
        {{/each}}
        </optgroup>
        <optgroup label="Instances">
            {{#each instances}}
                {{#if (either (not (includes name "test")) ../password) }}
                <option value="{{web_url}}">{{name}}</option>
                {{/if}}
            {{/each}}
        </optgroup>
    </select>
  </nav>
</header>